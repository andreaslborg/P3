@using ManagementPages.Functions
@using ManagementPages.Model
@inject IDbService _dbService

<div class="modal @ModalClass" tabindex="-1" role="dialog" style="display: @ModalDisplay">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nyt opslag - @SelectedCategory?.CategoryModel?.Title</h5>
                <button @onclick="() => Close()" type="button" class="close btn btn-secondary" data-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <EditForm Model="NewPostTemp" OnValidSubmit="SaveAndClose">
                <DataAnnotationsValidator/>
                <ValidationSummary/>

                <div class="col-12 row modal-body">
                    <div class="col-6">
                        <label for="title" class="form-label">Titel</label>
                        <input type="text" class="form-control" id="title"
                               @bind-value="NewPostTemp.Title">
                    </div>
                    <div class="col-6">
                        <label for="author" class="form-label">Forfatter</label>
                        <input type="text" class="form-control" id="author" @bind-value="NewPostTemp.Author">
                    </div>
                    <div class="mt-3" id="toolbar">
                        <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                            <div class="btn-group me-2 " role="group" aria-label="First group">
                                <button type="button" class="btn btn-outline-secondary" disabled>
                                    <i class="bi bi-type-bold"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary" disabled>
                                    <i class="bi bi-type-italic"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary" disabled>
                                    <i class="bi bi-type-underline"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary" disabled>
                                    <i class="bi bi-type-strikethrough"></i>
                                </button>
                            </div>
                            <div class="btn-group me-2" role="group" aria-label="Second group">
                                <button type="button" class="btn btn-outline-secondary" disabled>
                                    <i class="bi bi-list-ul"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary" disabled>
                                    <i class="bi bi-list-ol"></i>
                                </button>
                            </div>
                            <div class="btn-group" role="group" aria-label="Third group">
                                <button type="button" class="btn btn-outline-secondary" disabled data-bs-toggle="tooltip" data-bs-placement="top"
                                        title="Tilføj et billede">
                                    <i class="bi bi-image"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary" disabled data-bs-toggle="tooltip" data-bs-placement="top"
                                        title="Tilføj et lyd klip">
                                    <i class="bi bi-music-note-beamed"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <label for="text" class="form-label">Tekst</label>
                        <textarea class="form-control" id="text" rows="8" @bind="NewPostTemp.Text"></textarea>
                    </div>
                    <br/>
                    <div class="col-3 mt-3">
                        <label for="url" class="form-label">Link / URL</label>
                        <input type="text" class="form-control" id="url" @bind-value="NewPostTemp.Link">
                    </div>
                    <div class="col-3 mt-3">
                        <label for="urltext" class="form-label">Link Tekst</label>
                        <input type="text" class="form-control" id="urltext" placeholder="Tryk her for at læse mere." disabled>
                    </div>
                    <div class="col-3 mt-3">
                        <label for="date" class="form-label">Offentlig dato</label>
                        <input type="date" class="form-control" id="date" disabled>
                    </div>
                    <div class="col-3 mt-3">
                        <label for="date2" class="form-label">Skal skjules dato</label>
                        <input type="date" class="form-control" id="date2" disabled>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger" data-dismiss="modal" @onclick="() => Close()">Fortryd</button>
                    <button type="submit" class="btn btn-secondary" data-dismiss="modal" @onclick="() => IsPublished = false">Gem som kladde</button>
                    <button type="submit" class="btn btn-success" @onclick="() => IsPublished = true">Gem</button>
                </div>
            </EditForm>


        </div>
    </div>
</div>


@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}


@code {

    [Parameter]
    public EventCallback OnChangesMade { get; set; }

    public ICategoryViewModel SelectedCategory { get; set; } = new CategoryViewModel();

    public PostModel NewPostTemp = new();

    public bool IsPublished { get; set; }

    public string ModalDisplay = "none;";
    public string ModalClass = "";
    public bool ShowBackdrop = false;

    public void Open(ICategoryViewModel selectedCategory)
    {
        SelectedCategory = selectedCategory;
        ModalDisplay = "block;";
        ModalClass = "Show";
        ShowBackdrop = true;
        StateHasChanged();
    }

    public void Close()
    {
        ModalDisplay = "none";
        ModalClass = "";
        ShowBackdrop = false;
        StateHasChanged();
    }

    public void SaveAndClose()
    {
        Close();

        // add new post to database
        SelectedCategory.AddNewPost(NewPostTemp, IsPublished, _dbService);

        // notify PostOverview about changes
        OnChangesMade.InvokeAsync();

        // reset temporary post object
        NewPostTemp = new PostModel();
    }
}
